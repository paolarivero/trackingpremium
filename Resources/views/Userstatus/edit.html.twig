{% extends '::base.html.twig' %}

{% block body -%}
<div class="widget">
    <div class="widget-header"> <i class="icon-user-md"></i>
              <h3>Editar un tipo de status de usuario</h3>
    </div>
    <!-- /widget-header -->
    <div class="widget-content">
	{{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
    <table class="table table-bordered">
	<tbody>
		<td>{{ form_row(edit_form.name) }} </td>
		<td>{{ form_row(edit_form.description) }} </td>
	</tbody>
       <tfoot>
		<td>{{ form_row(edit_form.submit) }}</td>
		<td><a href="{{ path('userstatus') }}" class="btn btn-default">Regresar a la lista</a></td>
		
	</tfoot>
    </table>
	{{ form_end(edit_form) }}
   </div>
</div>
{% endblock %}
