{% extends '::base.html.twig' %}

{% block body -%}

<div class="widget">
    <div class="widget-header"> <i class="icon-money"></i>
              <h3>Modificar tipo de pago</h3>
    </div>
    <!-- /widget-header -->
    <div class="widget-content">
    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
	     <div class="bodycontainer scrollable">
	     <table class="table table-striped table-bordered">
                <thead>
                  <tr>
    			<th colspan="4"><h4>Datos del tipo de pago</h4></th>
		  </tr>
                </thead>
       		<tbody>
			<tr>
    			<td>{{ form_row(edit_form.name) }}</td>
			<td>{{ form_row(edit_form.description) }}</td>
			<td>{{ form_row(edit_form.active) }}</td>
			</tr> 
			
    	</tbody>
        <tfoot>
    	<tr>
    	<td style="text-align:center;">{{ form_row(edit_form.submit) }}</td>
	<td style="text-align:center;"><button type="button" class="btn btn-default bdelete" data-toggle="modal" data-target="#deletepaid">Eliminar</button></td>
    	<td style="text-align:center;"><button type="button" class="btn btn-default" onclick="location.href='{{ path('paidtype') }}';">Regresar a lista</button></td>
    	</tr>
    </tfoot>
    </table>
    {{ form_end(edit_form) }}


<!-- Modal -->
  <div class="modal fade" id="deletepaid" role="dialog">
    <div class="modal-dialog modal-lg">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button id="closecancelbill" type="button" class="close" data-dismiss="modal">&times;</button>
          <h2 class="modal-title">Confirme la eliminaci√≥n</h2>
        </div>
        <div class="modal-body">
	      <table class="table">
	      <thead>
		<th colspan=2 style="text-align:center;color:red;"><h2>Desea eliminar el tipo de pago <b>"{{ entity.name }}"</b></h2></th>
	      </tehead>
	      <tbody>
		<tr>
		<td><button type="button" class="btn btn-info btn-lg gotodelete">Confirmar</button><td>
	        <td><button id="closedeletepaid" type="button" class="btn btn-default" data-dismiss="modal">Regresar</button><td>
		</tr>
	      </tbody>
	      </table>
        </div>
        
        <div class="modal-footer">
          <button id="closedeletepaid" type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
      </div>     
    </div>
  </div>
{% block javascript %}
<script type="text/javascript">
$(document).ready(function () {
	$('.gotodelete').click(function(e) {
	        e.preventDefault();
		var url="{{ path('paidtype_delete', { 'id': entity.id }) }}";
		// alert('VOY A ANULAR LA FACTURA: ' + url);
		window.location.href = url;
		return false;
	});
});
</script>
{% endblock %}
{% endblock %}
