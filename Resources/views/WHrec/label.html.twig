{% extends '::layout-pdf.html.twig' %}

{% block body %}

<center>

{% set pieces = entity.receipts|length %}

{% if pieces > 1 %}
{% for i in 1..pieces %}
	<div class="page" style="page-break-before: always;">
	<h2>{{ entity.receiver.name }} {{ entity.receiver.lastname }} </h2>
	<h2>{% filter upper %}
    		{{ entity.receiver.city}}
	 {% endfilter %}
	</h2>
	<br>
	
	<h2>{{ i }} de {{ pieces }}</h2>
	<br>
	
	<h2>
	<table>

	<tr>
	<td style="text-align:center;">
        {% set name = companies_logos ~ entity.maincompany.logo %}
        <img src="{{ absolute_url(asset(name)) }}" alt="Logo" style="width:50px">
	</td>
	<td> <span style="display:inline-block; width:2em;"></span></td>
	<td style="text-align:center;">
	 	{{ entity.number }}
	</td>
	<td> <span style="display:inline-block; width:2em;"></span></td>
	<td style="text-align:center;">
		{% set name = companies_logos ~ entity.maincompany.logo %}
        <img src="{{ absolute_url(asset(name)) }}" alt="Logo" style="width:50px">
	</td>
	</tr>
	</table>
	</h2>
	</div>
{% endfor %}
	
{% else %}
	<h2>{{ entity.receiver.name }} {{ entity.receiver.lastname }} </h2>
	<h2>{% filter upper %}
    		{{ entity.receiver.city}}
	 {% endfilter %}
	</h2>
	<br>
	
	<h2>{{ 1 }} de {{ 1 }}</h2>
	<br>
	
	<h2>
	<table>
	<tr>
	<td style="text-align:center;">
		{% if entity.maincompany.logo %}
        {% set name = companies_logos ~ entity.maincompany.logo %}
    {% else %}
        {% set name = companies_logos ~ 'default.png' %}
    {% endif %}
        <img src="{{ absolute_url(asset(name)) }}" alt="Logo" style="width:50px">
	</td>
	<td> <span style="display:inline-block; width:2em;"></span></td>
	<td style="text-align:center;">
	 	{{ entity.number }}
	</td>
	<td> <span style="display:inline-block; width:2em;"></span></td>
	<td style="text-align:center;">
        <img src="{{ absolute_url(asset(name)) }}" alt="Logo" style="width:50px">
	</td>
	</tr>
	</table>
	</h2>
{% endif %}

</center>

{% endblock %} 


