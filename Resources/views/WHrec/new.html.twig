        $('.list-packages').collection({
            add_at_the_end: false,
            allow_up: false,
            allow_down: false,
            min: 1,
            add: '<a id="newpack"></a>',
            after_add: function (collection, element) {
                var all = $('.list-packages').find('> div');
                var npack = all.length;
                for (var ii=0; ii<npack; ii++) {
                    var thiselem = all[ii];
                    if (element[0] == thiselem) {
