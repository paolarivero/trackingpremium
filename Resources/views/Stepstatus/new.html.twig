{% extends '::newbase.html.twig' %}

{% block title %}
    <title>{% trans %}Paso{% endtrans %} </title>
{% endblock %}

{% form_theme form 'form/fields.html.twig' %}
{% block body -%}

<div id="pcont" class="container-fluid">
    <div class="page-head">
        <h2>Nuevo {% trans %}Paso{% endtrans %}</h2>
            <ol class="breadcrumb">
            <li><a href="{{ url('homepage') }}">Home</a></li>
            <li><a href="{{ url('stepstatus') }}">{% trans %}Pasos{% endtrans %}  </a></li>
            <li class="active"> Nuevo {% trans %}Paso{% endtrans %}</li>
            </ol>
             {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-danger">
                    <strong>Advertencia: </strong>{{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('warning') %}
                <div class="alert alert-danger">
                    <strong>Advertencia: </strong>{{ flashMessage }}
                </div>
            {% endfor %}
    </div>
    <div class="cl-mcont">
        {{ form_start(form, {attr: {novalidate: 'novalidate', 'id': 'moveguide_type' }}) }}
        <div class="block-flat">
            <div class="header">
            <h2>Datos del {% trans %}Paso{% endtrans %}</h2>
            </div>
            <div class="content">
                {{ form_row(form.name) }}
                {{ form_row(form.percentage) }}
                {{ form_row(form.description) }}
                <table class="no-border">
                    <tbody class="no-border-y">
                        <tr>
                        <td>
                            <button type="button" onClick="history.go(-1);return true;" class="btn btn-default" >Regresar</button>
                        </td>
                        <td style="text-align:right;">
                            {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
                        </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ form_end(form)}}
</div>

{% endblock %}
