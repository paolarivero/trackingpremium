{% extends '::newbase.html.twig' %}

{% block body -%}
<div class="widget">
    <div class="widget-header"> <i class="icon icon-truck"></i>
              <h3> <b>Nuevo Empresa Local</b> 
		
	      </h3>
    </div>
    <!-- /widget-header -->
    <div class="widget-content">
    <div class="bodycontainer scrollable">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-danger alert-white rounded">
            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">Ã—</button>
            <div class="icon">
                <i class="fa fa-warning"></i>
            </div>
            <strong>Alerta! </strong> {{ flashMessage|raw }} 
            </strong>
        </div>
    {% endfor %}

<table class="table table-striped table-bordered">
<tbody>
<tr>
<td>{{ form_row(form.name) }}</td>
<td>{{ form_row(form.comment) }}</td>
<td>{{ form_row(form.country) }}</td>
</tr>
</tbody>
<tfoot>
<tr>
<td colspan>{{ form_row(form.submit) }}</td>
<td colspan=2 style="text-align:right;"><button type="button" class="btn btn-default" onclick="location.href='{{ path('company') }}';">Regresar</button></td>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
{{ form_end(form) }}
{% endblock %}
