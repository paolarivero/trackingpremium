{% extends '::base.html.twig' %}

{% block body -%}
{% set guidelist = '["'~ entity.id ~'"]'%}
<div class="widget">
    <div class="widget-header"> <i class="icon-remove-sign"></i>
              <h3> <b>Se anulará {% trans %}Guía{% endtrans %}</b> </h3>  &nbsp; <button type="button" onClick="history.go(-1);return true;" class="btn btn-default btn-lg bback" >Regresar</button>
    </div>
    <!-- /widget-header -->
    <div class="widget-content">
    
    <table class="table table-striped table-bordered">
                <thead>
		<tr>
                <th><h3>Número</h3></th>
		<th><h3>Servicio</h3></th>
		<th><h3>Agencia</h3></th>
		<th><h3>Fecha</h3></th>
		<th><h3>Recibido por</h3></th>
		{% if entity.bag is not null  %}
		    <th><h3>En Bolsa</h3></th>
		{% endif %}
		</tr>	
		</thead>
       		<tbody>
			<tr>
			<td>{{ entity.number }}</td>
			<td>{{ entity.shippingtype }}</td>
			<td>{{ entity.agency }}</td>
			<td>{{ entity.creationdate|date('m/d/Y') }}</td>
			<td>{{ entity.processedby }}</td>
			{% if entity.bag is not null  %}
				<td><a  class="btn btn-default" href="{{ path('bag_show', { 'id': entity.bag.id }) }}">{{ entity.bag.number }}</a></td>
			{% endif %} 
			</tr>
		</tbody>
		<tfoot>
		<tr>
		{% if entity.bag is not null  %}
		<td colspan=6 style="text-align:center;">
		{% else %}
		<td  colspan=5 style="text-align:center;">
		{% endif %}
		{{ form(delete_form) }}
		</td>
    		</tr>
		</tfoot>
    </table> 
    <table class="table">
    <tbody>
    
    </tbody>
    </table>
</div>
</div>

{% endblock %}
