{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Bodega</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ entity.zip }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Agencia</th>
                <td>{{ entity.agency }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ entity.city }}</td>
            </tr>
           <tr>
                <th>Fecha de creación</th>
                <td>{{ entity.creationdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Última modificación</th>
                <td>{{ entity.lastupdate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('warehouse') }}">
            Regresar a la lista de Bodegas
        </a>
    </li>
    <li>
        <a href="{{ path('warehouse_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
