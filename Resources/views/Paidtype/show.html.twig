{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tipo de pago</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ entity.description }}</td>
            </tr>
	    <tr>
                <th>Activo</th>
                <td>{% if entity.active %}
			<input type="checkbox" checked="checked" disabled readonly >
		    {% else %}
			<input type="checkbox" disabled readonly >
		    {% endif %}</td>
            </tr>
            <tr>
                <th>Fecha de creación</th>
                <td>{{ entity.creationdate|date('m/d/Y') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('paidtype') }}">
            Regresar a la lista de tipos de pago
        </a>
    </li>
    <li>
        <a href="{{ path('paidtype_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
