{% extends '::base.html.twig' %}

{% block body -%}
<div class="widget">
    <div class="widget-header"> <i class="icon-adjust"></i>
              <h3> Lista de servicios de la agencia {{ agency.name }} <a href="{{ path('servicetype_new', { 'idag': agency.id }) }}" class="btn btn-default btn-mini">Nuevo servicio</a> </h3>
    </div>
    <!-- /widget-header -->
    <div class="widget-content">

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
		<th>Tipo de envío</th>
                <th>Status</th>
                <th>Fecha de creación</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><button type="button" class="btn btn-success btn-mini" onclick="location.href='{{ path('servicetype_edit', { 'id': entity.id }) }}';">{{ entity.name }}</button></td>
		<td>{{ entity.shippingtype }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.creationdate %}{{ entity.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
	<tfoot>
		<tr>
                <td colspan=4><button type="button" class="btn btn-default" onclick="location.href='{{ path('config') }}';">Regresar</button></td>
		</tr>
	</tfoot>

    </table>
</div>
</div>
{% endblock %}
