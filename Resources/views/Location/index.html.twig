{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listado de ubicaciones en bodega</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Espacio volumétrico</th>
                <th>Posición</th>
                <th>Comentario</th>
		<th>Bodega</th>
		<th>Fecha de creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.space }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.comment }}</td>
		<td>{{ entity.warehouse }}</td>
		<td>{% if entity.creationdate %}{{ entity.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('location_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('location_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('location_new') }}">
                Crear una nueva ubicación
            </a>
        </li>
    </ul>
    {% endblock %}
